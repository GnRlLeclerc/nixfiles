---
whiskers:
  version: ^2.5.1
  matrix:
    - flavor
    - accent: ["lavender"]
  filename: "themes/catppuccin-fzf-{{ flavor.identifier }}.fish"
  hex_format: "#{{R}}{{G}}{{B}}{{Z}}"
---
set -U FZF_DEFAULT_OPTS "\
--color=bg+:{{surface0.hex}},spinner:{{rosewater.hex}},hl:{{red.hex}} \
--color=fg:{{text.hex}},header:{{red.hex}},info:{{mauve.hex}},pointer:{{flavor.colors[accent].hex}} \
--color=marker:{{lavender.hex}},fg+:{{text.hex}},prompt:{{mauve.hex}},hl+:{{red.hex}} \
--color=selected-bg:{{surface1.hex}} \
--color=border:{{surface0.hex}},label:{{text.hex}}"
